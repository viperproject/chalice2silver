class Test01 {
  var f: int
  var g: int
  var h: int
  var k: int
  var m: int

  predicate P { rd(f) }
  predicate Q { rd(g) }
  predicate C { rd(m) }
  
  method inttimes01()
    requires acc(k, 2 * rd(C))
    ensures acc(k, rd(C) * 2)
  {}
  
  method dispose1()
    requires acc(f, 100 - rd(P))
    requires acc(f, rd(P))
  {
    assert acc(f)
  }

  method dispose1g()
    requires acc(g, 100 - rd(Q))
    requires acc(g, rd(Q))
  {
    assert acc(g)
  }
  
  method dispose2k()
    requires acc(k, 100 - rd)
    requires acc(k, rd)
  {
    assert acc(k)
  }

  method dispose2ag()
      requires acc(g, 100 - rd)
      requires acc(g, rd)
    {
      assert acc(g)
    }
  
  method dispose2b()
    requires acc(f, rd)
    requires acc(f, 100 - rd)
  {
    assert acc(f)
  }
  
  method dispose2bh()
      requires acc(h, rd)
      requires acc(h, 100 - rd)
    {
      assert acc(h)
    }
  
  method test01()
    requires acc(g)
    ensures rd*(g) /* @Error 330 */
  {
    call dispose1g()
  }
  
  method test02()
    requires acc(k)
    ensures rd*(k) /* @Holds */
      /* As mentioned in Stefan's BSc thesis, rd's must be exhaled before
       * acc's, otherwise exhaling 100-rd && rd behaves different
       * from exhaling rd && 100-rd.
       */
  {
    call dispose2k()   // fails in Chalice2SIL, succeeds in Syxc
  }
  
  method test03()
    requires acc(h)
    ensures rd*(h) /* @Error 330 */
  {
    call dispose2bh()
  }
}

class Test02 {
  var f: int
  
  predicate P01 {
    rd(f) && acc(f, 25 - 2 * (0 - rd(P01) + 3 * rd(P01))) && acc(f, 70 + 2 + 3) && acc(f, (8 - 5) * rd(P01))
  }
  
  method test01()
    requires P01
    ensures acc(f)
  {
    unfold P01
  }
  
  method test02()
    requires P01
    ensures acc(f)
