class LocalVars {
	method decl(x: int, y: int, z: int) returns (r: int)
		requires x == y
		requires z != x
		ensures r == 2 * x + z
	{
		var b1: int := x + y
		var b2: int

		b2 := b1 + z
		r := b2
	}
	
