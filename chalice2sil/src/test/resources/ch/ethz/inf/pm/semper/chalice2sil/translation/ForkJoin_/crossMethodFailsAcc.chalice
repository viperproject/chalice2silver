class Main{
    var f : int;
    method work()
        requires acc(f)
        ensures acc(f)
    {
    }

    method main()
        requires acc(f)
        ensures acc(f)
    {
        f := 3;
        fork tk := work();
        call client(tk);
    }

    method client(tk : token<Main.work>, obj : Main)
        requires acc(tk.joinable) && tk.joinable
        ensures acc(obj.f) // @Error 330 // Postcondition might not hold, because we don't know that tk.thisPtr == obj
    {
        join tk;
    }
}