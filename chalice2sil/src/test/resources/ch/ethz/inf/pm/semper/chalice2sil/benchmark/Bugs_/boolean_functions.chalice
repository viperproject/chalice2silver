/* There has been a bug in the Z3-encoding of function declarations such that 
 * functions were always of sort Int.
 */
class Test {
	function f(): bool { true }
	
	function g(a: bool): bool { !a }
	
	method test() {
		var x: bool := f()
		var y: bool := g(x)
		var z: bool := g(!x)
	}
}

/* There has been a bug in the typing of 'result' expressions such that they
 * were always of type Int and thus of Z3 sort Int.
 */
class Test2 {
	function f(): bool
		ensures result /* Used to crash Z3 due to wrong sort */
	{ true }
}