class Main {
    var f : int;
    method main(){
        var m1 : Main;
        var m2 : Main;

        m1 := new Main;
        m1.f := 3;

        m2 := new Main;
        m2.f := 5;

        share m2;

        share m1 above m2;

        acquire m2;

        m2.f := 13;

        call change(m1,7,m2);

        assert m1.f == 7;
        assert m2.f == 13;

        release m1;
        //call dispose(m2); // Method might lock/unlock more than allowed
        //assert !holds(m2);
        release m2;       // works
    }

    method dispose(m : Main)
        requires rd(m.mu)   //acc doesn't work either
        requires holds(m)
        requires acc(m.f)
        ensures rd(m.mu)
        ensures !holds(m)
        lockchange(m)
    {
        release m;
    }

    invariant acc(f)

    method change(m : Main, n : int, x : Main)
        requires m != null
        requires acc(x.mu)
        requires acc(m.mu)
        requires waitlevel << m.mu
        ensures holds(m)
        ensures acc(m.f)
        ensures m.f == n
        ensures acc(x.mu)
        lockchange(m)
    {
        acquire m;
        m.f := n;
    }
}