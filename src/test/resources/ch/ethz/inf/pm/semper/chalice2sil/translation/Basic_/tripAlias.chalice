class C {
    var f : int;

    method main(x : C, y : C)
        requires x != null
        requires y != null
        requires acc(x.f)
        requires acc(y.f)
        ensures acc(x.f)
        ensures acc(y.f)
    {
        x.f := 5;
        y.f := 6;

        // should succeed, since the caller wouldn't have been able to pass 2*full permission to x.f
        assert x.f == 5;
    }
}