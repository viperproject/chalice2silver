// @Ignore MatchError for IfThenElseTerm, see issue 3
class IfThenElse {
	var x: int
	var y: int
	
	method foo(b: bool) returns (r: int)
		requires b ? acc(x) : acc(y)
		ensures b ? acc(x) : acc(y)
		ensures b ? r == x : r == y
	{
		if (b) {
			r := x
		} else {
			r := y
		}
		
		var t1: int := b ? x : 0
		var t2: int := b ? 0 : y
	}
}