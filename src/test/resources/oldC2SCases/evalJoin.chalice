class Main{
    var f : int;
    method work()
        requires acc(f)
        ensures acc(f)
    {
    }

    method main()
        requires acc(f)
        ensures acc(f)
    {
        f := 3;
        fork tk := work();
        call client(tk);
    }

    method client(tk : token<Main.work>)
        requires acc(tk.joinable) && tk.joinable
        requires eval(tk.fork this.work(), true)
        ensures acc(f)
    {
        join tk;
    }
}