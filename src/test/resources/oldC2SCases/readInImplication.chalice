class Main {
    var f : int;
    var g : int;
    var p : bool;
    method goal()
        requires rd(p)
        requires p ==> acc(f) && rd(g)
        ensures rd(p)
        ensures old(p) ==> acc(f) && rd(g) && f == g
    {
        if(p){
            f := g;
        }
    }
    method main()
        requires acc(f)
        requires rd(p)
        requires acc(g)
        requires p
        ensures acc(f)
        ensures acc(g)
        ensures rd(p)
    {
        g := 3;
        call this.goal();
        assert f == g;
    }

    method main_neg()
            requires acc(f)
            requires rd(p)
            requires acc(g)
            // don't require `p`
            ensures acc(f)
            ensures acc(g)
            ensures rd(p)
        {
            g := 3;
            call this.goal();
            assert f == g;  // @Error 410
        }
}