/* There was a bug in the execution of the if-statement such that the branch
 * with the assumption 'if-guard == false' was not executed if the if-statement
 * had no else-branch.
 */
class Test {
  method test1(b: bool) {
		var a: int
    if (b) { a := 5 }
    //:: ExpectedError(ass.violated:ass.false)
    assert a < 10
  }
}