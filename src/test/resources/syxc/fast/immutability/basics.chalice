class Test01 {
  var f: int
  
  predicate P { rd(f) }

  method test01()
    requires rd(f)
  {
    freeze f
    assert frozen(f) /* @Error 410 */
  }
  
  method test02()
    requires acc(f)
    ensures rd(f)
    ensures rd*(f)
  {
    freeze f
    assert frozen(f)
  }

  method test03()
    requires rd(f)
    ensures rd*(f)
  {
    freeze f
  }

  method test04()
    requires acc(f)
    ensures acc(f, 10) /* @Error 330 */
  {
    freeze f
  }

  method test05()
    requires acc(f, 1)
    ensures acc(f, rd(P))
  {
    freeze f
  }
  
